extend ../base.pug

block heading-right
	div(class="pull-right")
		form(action="/users/logout" method="POST" class="navbar-form navbar-right")
			label(class="label-greeting") Welcome back, #{foundUser.username}
			button(type="submit" class="btn btn-default") log out
block content
	div(class="container")
		div(class="row")
			div(class="col-xs-6 col-xs-offset-3")
				h1 User details
				p Username: #{foundUser.username}
				p Email: #{foundUser.email}
				a(href=`${foundUser._id}/edit`) edit details